@{
    ViewData["Title"] = "Home Page";
    IgnoreBody();
}

@model IEnumerable<TaskDTO>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Todo.MvcUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.css">

</head>
<body class="m-0 p-0">
    <div class="container-fluid vh-100">
        <div class="container p-3">
            <div class="row h-auto">
                <div class="col w-50">
                    <h4 class="">Task Lists</h4>
                </div>
                <div class="col w-50">
                </div>
            </div>
            <div class="row h-100 p-4 shadow-sm">
                @foreach (var item in Model)
                {
                    string parentId = $"_{item.Id}_{item.Name?.Replace(' ', '_')}";
                    string childId = $"{item.Name?.Replace(' ', '_')}";

                    <div class="accordion shadow-sm" id="@parentId">
                        <div class="accordion-item">
                            <div class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@childId" aria-expanded="false" aria-controls="#@childId">
                                    <div class="d-flex flex-row w-100">
                                        <h3 class="display-6">
                                            @item.Name
                                        </h3>
                                    </div>
                                    <div class="d-flex flex-row-reverse w-100">
                                        <i class="fa-solid fa-thumbs-up"></i>
                                    </div>
                                </button>
                            </div>
                            <div id="@childId" class="accordion-collapse collapse" data-bs-parent="#@parentId">
                                <div class="accordion-body">
                                    test content
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
